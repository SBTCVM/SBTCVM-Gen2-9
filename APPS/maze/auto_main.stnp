label main
prline Maze View:
newline
prline ---------------
newline
gsub draw2
newline
prline ---------------
newline
prline w,a,s,d=move, q=quit, m=map, o=about this game
keyprompt
set keybuff
if keybuff,upk gsub doup
if keybuff,dnk gsub dodown
if keybuff,lk gsub doleft
if keybuff,rk gsub doright
if keybuff,mapk gsub drawfull
if keybuff,aboutk gsub about
if keybuff,quitk goto quit
goto main


label quit
prline GAME OVER.
prline press a key to exit.
keyprompt
stop

label doup
sub py,add1
set newy
copy px,newx
gsub check
return

label dodown
add py,add1
set newy
copy px,newx
gsub check
return

label doleft
sub px,add1
set newx
copy py,newy
gsub check
return

label doright
add px,add1
set newx
copy py,newy
gsub check
return


label check
copy newx,lookx
copy newy,looky
gsub lookup
if lookresult,floor goto check_pass
if lookresult,win goto winner
prline I can't go that way.
return
label check_pass
copy newx,px
copy newy,py
return

label winner
prline YOU WIN!!!
prline Press a key to exit
keyprompt
stop

label draw2
#--
sub px,add1
set lookx
sub py,add1
set looky
gsub lookup
chardump lookresult
#0-
copy px,lookx
sub py,add1
set looky
gsub lookup
chardump lookresult
#+-
add px,add1
set lookx
sub py,add1
set looky
gsub lookup
chardump lookresult
print  |
newline
#-0
sub px,add1
set lookx
copy py,looky
gsub lookup
chardump lookresult
#00
print @
#+0
add px,add1
set lookx
copy py,looky
gsub lookup
chardump lookresult
print  |
newline

#-+
sub px,add1
set lookx
add py,add1
set looky
gsub lookup
chardump lookresult

#0+
copy px,lookx
add py,add1
set looky
gsub lookup
chardump lookresult

#++
add px,add1
set lookx
add py,add1
set looky
gsub lookup
chardump lookresult
print  |
newline

return


label drawfull
prline You are at '@'. exit is at '='.
get set0
set drawx
set drawy

label draw_yl
label draw_xl
###Check if at play pos
if drawy,py goto draw_poscheck
goto draw_skippos

#POSCHECK X
label draw_poscheck
if drawx,px gsub draw_pointget
if drawx,px goto draw_skiplook

label draw_skippos
copy drawx,lookx
copy drawy,looky
gsub lookup
chardump lookresult
label draw_skiplook


add drawx,add1
set drawx
if drawx,mazewide goto draw_xret
goto draw_xl

label draw_xret
get set0
set drawx
newline
add drawy,add1
set drawy
if drawy,mazetall return
goto draw_yl


label draw_pointget
print @
return

#####nifty little lookup routine.

label lookup
mul mazewide,looky
set ymul
add ymul,lookx
set lookpos
add lookpos,mazememtop
asm datawrite1;>ASMKEEP
asm dataread1;;ASMKEEP
set lookresult
return

