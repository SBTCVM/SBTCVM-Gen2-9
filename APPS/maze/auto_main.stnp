label skipdata

var add1=10x1
var set0=0
var mazememtop=10x0



var drawx=10x0
var drawy=10x0

#lookup subroutine argument variables.
var lookx=10x0
var looky=10x0

var floor=:\s
var win=:=

var upk=:w
var dnk=:s
var lk=:a
var rk=:d


var quitk=:q

var mapk=:m

var aboutk=:o

var ymul=10x0
var lookpos=10x0
var lookresult=10x0

var keybuff=10x0


var newx=10x0
var newy=10x0

prline ternary maze engine. v0.1

#magic maze address retrieval code.
asm setreg1;>mazetop
set mazememtop
add add1,mazememtop
set mazememtop



