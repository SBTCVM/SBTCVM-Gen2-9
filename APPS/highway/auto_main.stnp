label score_1p
sub p1,pacer
set p1buff
abs p1buff
set p1buff
print Player 1 was:
dumpd p1buff
print , miles away from target
newline
sub comp,pacer
set compbuff
abs compbuff
set compbuff
print Computer was:
dumpd compbuff
print , miles away from target
newline
ifless p1buff,compbuff gsub p1win
ifmore p1buff,compbuff gsub compwin
if p1buff,compbuff gsub tiewin
print Player 1 wins:
dumpd p1score
newline
print Computer wins:
dumpd compscore
newline
print Ties:
dumpd ties
newline
print Games:
dumpd games
newline
return

