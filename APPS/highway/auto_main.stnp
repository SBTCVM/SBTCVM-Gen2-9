######Complicated 'road' drawing subroutine.
label trace
#if tcnt=tpos, draw car, else draw road.
if tcnt,tpos goto trace_car
goto trace_road
###Car tile draw
label trace_car
print +ED
goto trace_inc
###Road tile draw
label trace_road
print +__
goto trace_inc
###increment & exit condition
label trace_inc
add tcnt,tinc
set tcnt
if tcnt,tend goto trace_end
goto trace
###return code for trace
label trace_end
get tstart
set tcnt
newline
return

